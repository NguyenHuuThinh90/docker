pipeline {
    agent any
    environment {
        MAVEN_PATH = 'k8e-jk-git/pom.xml'
		mvn = '/var/jenkins_home/tools_jk/apache-maven-3.6.1/bin/'
    }
	
    stages {
        stage('Build') {
            steps {
				withMaven(maven: 'maven_361', jdk: 'java11') {
					sh "${mvn}mvn clean -f ${MAVEN_PATH} install"
				}
            }
            post {
                success {
                    echo "DONE"
                }
            }
        }
    }
}
