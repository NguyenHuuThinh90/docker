pipeline {
    agent any
    tools {
	maven 'maven-361'
    }
    environment {
        MAVEN_PATH = 'k8e-jk-git/pom.xml'
    }
    stages {
        stage("Clean") {
            steps {
                sh "mvn -f  ${MAVEN_PATH} clean"
            }
        }
        stage('Build') {
            steps {
                sh "mvn -f  ${MAVEN_PATH} install"
            }
            post {
                success {
                    echo "DONE"
                }
            }
        }
    }
}
