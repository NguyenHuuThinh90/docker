pipeline {
    agent any
    environment {
        MAVEN_PATH = 'k8e-jk-git/pom.xml'
    }
    stages {
        stage('Build') {
            steps {
               withMaven(maven: 'maven-361', jdk: 'java-11') {
	       	sh "mvn clean -f ${MAVEN_PATH} install"
	       }
            }
            post {
                success {
                    echo "DONE"
                }
            }
        }
    }
}
