pipeline {
    agent any
    environment {
        MAVEN_PATH = 'k8e-jk-git/pom.xml'
		mvnDir = '/var/jenkins_home/tools_jk/apache-maven-3.6.1/bin/'

    }
	
    stages {
		stage('Clean') {
			steps {
				echo "${mvnDir}"
				sh "${mvnDir}mvn -f ${MAVEN_PATH} clean"
			}
		}
        stage('Build') {
            steps {
				sh "${mvnDir}mvn -f ${MAVEN_PATH} install"
            }
            post {
                success {
                    echo "DONE"
                }
            }
        }
    }
}
